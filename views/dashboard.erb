<h1 class="mt-5">Hello, Here are your posts
</h1>
<h2>
  <a href="/create">Create a Post</a>
</h2>

<div class="parallax fade-in display-none"><%=@user.f_name.downcase%></div>

<div class="grid-dash">
  <% @user.posts.reverse_each do |post| %>
    <% if post.id.to_i % 2 == 0 %>
      <div class="grid-item-dash">
    <% else %>
      <div class="grid-item-dash grid-item-dash-width2">
    <% end %>

    <% if post.tag == 'science' %>
      <div class="contain-overlay overlay pink">
    <% elsif post.tag == 'music' %>
       <div class="contain-overlay overlay blue">
    <% else %>
       <div class="contain-overlay overlay yellow">
    <%end%>
          <a href="post"><img src="<%=post.img%>" alt=""></a><br>
      </div>
          <%t = post.updated_at%>
            <%m = t.strftime("%m")%>
              <%d = t.strftime("%d")%>
                <span class="sm-gray"><%=m%>.<%=d%>
                  <%= post.tag%>
                  <%= @user.f_name.downcase%>
                  <%= @user.l_name.downcase%></span><br>
                <span class="md-black"><%=post.title%></span>
              </div>
    <% end %>
     </div>

<div class="parallax fade-in display-none"><%=@user.f_name.downcase%></div>
