<h1>Hello,
  <%=@user.f_name%>. Here are your posts
</h1>
<h2>
  <a href="/create">Create a Post</a>
</h2>

<div class="grid">

  <div>
    <div class="grid-item">
      <a href="post"><img src="<%=@user.posts[0].img%>" alt=""></a><br>
      <%t = @user.posts[0].updated_at%>
      <%m = t.strftime("%m")%>
      <%d = t.strftime("%d")%>
      <span class="sm-gray"><%=m%>.<%=d%> <%= @user.posts[0].tag%> <%= @user.f_name.downcase%> <%= @user.l_name.downcase%></span><br>
      <span class="md-black"><%=@user.posts[0].title%></span>
    </div>
  </div>


