<!-- main content  -->

<div class="grid">
<% @posts.reverse_each do |post| %>
 <% author = User.find_by(id: post.user_id)%>
  <% if post.id.to_i % 3 == 0 %>
  <div class="grid-item">
    <a href="post"><img src="<%=post.img%>" alt=""></a><br>
    <%t = post.updated_at%>
      <%m = t.strftime("%m")%>
        <%d = t.strftime("%d")%>
          <span class="sm-gray"><%=m%>.<%=d%>
            <%= post.tag%>
            <%= author.f_name.downcase%>
            <%= author.l_name.downcase%></span><br>
          <span class="md-black"><%=post.title%></span>
        </div>
        <% elsif post.id.to_i % 2 == 0 %>
        <div>
          <div class="grid-item grid-item--width2">
            <a href="post"><img src="<%=post.img%>" alt=""></a><br>
            <%t = post.updated_at%>
              <%m = t.strftime("%m")%>
                <%d = t.strftime("%d")%>
                  <span class="sm-gray"><%=m%>.<%=d%>
                    <%= post.tag%>
