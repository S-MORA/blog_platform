<div class="container">
  <div class="row my-5">
    <div class="col-lg-10">
      <h4 class="xlg-black">Are you sure you want to delete this post?</h4>
    </div>

    <div class="col-lg-2">
      <a href="/delete/final/<%=@post.id%>" class="link-btn">
          <div class="d-flex justify-content-center align-items-center">
            Delete
        </div>

      </a>
    </div>

  </div>

  <div class="row my-3">
    <div class="col-lg-12 mx-5">
      <h2 class="lg-black"><%=@post.title%></h2>
      <br>
    </div>


    <div class="col-lg-12 mx-5">
        <a href="/post/<%=@id%>">
        <img src="/<%=@post.img%>" alt=""><br>
      </a>

    </div>
      <div class="col-lg-10 mx-5 mb-5">
        <%t = @post.updated_at%>
          <%m = t.strftime("%m")%>
            <%d = t.strftime("%d")%>
              <% author = @post.user %>
                <div class="col-lg-12">
                  <span class="sm-gray"><%=m%>.<%=d%>
                    -
                    <%= @post.tag%>
                    -
                    <%= author.f_name.downcase%>
                    <%= author.l_name.downcase%>
                  </span>
                </div>
                <div class="col-lg-12">
                  <p class="md-black">
                    <%= @post.content%>
                  </p>
                </div>

              </div>
  </div>


        </div>
