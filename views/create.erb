<div class="container">
  <div class="col-lg-12">
    <form class="mt-5" action="/create" method="POST" enctype="multipart/form-data">
      <div class="row m-5">
        <div class="col-lg-12">
          <label class="md-black" for="title">Title:</label>
          <input type="text" name="title" class="form-control">
          <label class="md-black mt-4" for="content">Content:</label>
          <textarea cols="30" rows="10" name="content" class="form-control mt-2"></textarea>

          <div class="">
            <label class="radio-inline m-3 pink">
              <input class="mx-auto" type="radio" name="tag" value="science">
              science
            </label>
            <label class="radio-inline m-3 blue">
              <input class="mx-auto" type="radio" name="tag" value="music">
              music
            </label>
            <label class="radio-inline m-3 yellow">
              <input class="mx-auto" type="radio" name="tag" value="viral">
              viral
            </label>

          </div>
          <div class="d-flex justify-content-center align-items-center">
            <input type="file" name="file">
          </div>
          <div class="d-flex justify-content-center align-items-center mb-5">
            <input type="submit">
          </div>

        </div>
      </div>
    </div>
  </form>

</div>
